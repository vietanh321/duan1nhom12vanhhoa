<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#CBFDFDFD"
    android:layout_height="match_parent">


<ImageView
    android:src="@drawable/user_ssaa"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_marginTop="-90dp"
    android:layout_centerHorizontal="true"
    />
    <TextView
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:id="@+id/txtHoTen"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:textSize="35dp"
        android:textColor="#000000"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="__________________________________________________________"
        />


  <LinearLayout
      android:layout_marginTop="20dp"
      android:layout_width="380dp"
      android:layout_height="38dp"
      android:orientation="horizontal"
      >
      <TextView
          android:gravity="center"
          android:layout_width="340dp"
          android:layout_height="38dp"
          android:text="Thay đổi thông tin"

          />
      <ImageView
          android:id="@+id/update_information"
          android:layout_width="35dp"
          android:layout_height="38dp"
          android:src="@drawable/pen"
          />

  </LinearLayout>

    <TextView
        android:id="@+id/tvRecoverPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recovery Password"
        android:textColor="#0000FF"
        android:layout_marginTop="100dp"/>
    <Button

        android:layout_centerHorizontal="true"
        android:id="@+id/btnDoiMatKhau"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/txtHoTen"
        android:text="Đổi mật khẩu"
        android:backgroundTint="@color/Blue"
        android:textColor="#FFFFFF"
    />

    <Button
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnDangXuat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/btnDoiMatKhau"
        android:text="Đăng xuất"
        android:textSize="20dp"
        android:backgroundTint="#CBFDFDFD"
        android:textColor="#000000"
    />
</LinearLayout>
