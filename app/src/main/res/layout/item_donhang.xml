<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/khung_dangky"
    android:layout_marginTop="10dp"
    app:circularflow_radiusInDP="20dp"
    android:orientation="horizontal"
    >

    <LinearLayout

        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="mã Sản phẩm :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:gravity="center"
                android:phoneNumber="true"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"
                android:hint="ID Sản Phẩm ?"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idDonhang22"
                />

        </LinearLayout>
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >
           <TextView
               android:text="Mã đơn hàng :"
               android:gravity="center"
               android:textColor="@color/Blue"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:fontFamily="sans-serif-black"
               />
           <TextView
               android:gravity="center"
               android:textColor="#FF0000"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/id_sanpham22"
               android:phoneNumber="true"
               android:textSize="20dp"
               android:fontFamily="sans-serif-black"
               android:hint="ID Đơn hàng ?"/>

       </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:textSize="20dp"
                android:text="ID_uer :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />

            <TextView
                android:textSize="20dp"
                android:id="@+id/textinputname22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF0000"
                android:hint="" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Size :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/size22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:hint="size" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Số lượng sp :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/textinputemail22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số lượng sp"
                android:inputType="textEmailAddress" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Tổng tiền :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tongtien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textEmailAddress" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="SDT :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/sdt_88"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textEmailAddress" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Địa chỉ :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/diachi_88"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textEmailAddress" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="Tên KH :"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                />
            <TextView
                android:textColor="@color/black"
                android:id="@+id/ten_88"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="textEmailAddress" />


        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/trangthai22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="textPostalAddress"
            android:text="please don't remove it"
            android:hint="trang thai" />
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/matt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="textPostalAddress"
           />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
       <ImageView
           android:src="@drawable/img_15"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:id="@+id/ttkh"
           />

        <ImageView
            android:layout_marginTop="200dp"
            android:src="@drawable/delete_red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/delete_donhang"
            />

    </LinearLayout>
</LinearLayout>