<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/font"
    android:layout_height="match_parent"
    tools:context=".Frament_user.Fragment_home">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <androidx.appcompat.widget.SearchView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_timkiem"
            android:layout_width="380dp"
            android:iconifiedByDefault="false"
            android:queryHint="Looking for shoes"
            android:hint="Looking for shoes"
            android:layout_height="45dp"
            android:id="@+id/searchSach"></androidx.appcompat.widget.SearchView>

        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="380dp"
            android:layout_height="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Arrivals"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:id="@+id/cardView_nguoidung"
            >

            <androidx.viewpager.widget.ViewPager
                android:layout_gravity="center"
                android:id="@+id/viewPager_nguoidung"
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:background="@drawable/banner_shape"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="380dp"
            android:layout_height="20dp"
            >
            <TextView
android:id="@+id/bestseller"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Seller"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_gravity="center"
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:id="@+id/fragment_home_rcv"/>

    </LinearLayout>



</RelativeLayout>