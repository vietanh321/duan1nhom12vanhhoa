<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3DE"
    android:orientation="vertical"
>
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Thông tin khách hàng"
        app:titleTextColor="@color/white"
        android:background="#2EAA8D"
        android:id="@+id/toolbarkhachhang"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập thông tin khách hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />
        <EditText
            android:enabled="false"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_sanpham"
            android:phoneNumber="true"
            android:hint="ID Sản Phẩm ?"/>


        <EditText
            android:id="@+id/textinputname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Tên khách hàng" />

        <EditText
            android:id="@+id/textinputsdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="phone"
            android:hint="Số điện thoại" />



        <EditText
            android:id="@+id/textinputaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="textPostalAddress"
            android:hint="Địa chỉ" />
        <EditText
            android:id="@+id/textinputemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:inputType="textEmailAddress"
            android:hint="Số lượng sản phẩm" />
        <EditText
            android:enabled="false"
            android:focusable="false"
            android:inputType="none"
            android:id="@+id/trangthai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="chờ xác nhận"

            android:hint="trang thai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:backgroundTint="#9C4483"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnxacnhan"
                android:text="Xác nhận" />

            <Button
                android:backgroundTint="#AE3E3E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnquaylai"
                android:text="Quay lại"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>