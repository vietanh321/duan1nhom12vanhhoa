<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:circularflow_radiusInDP="15dp"
    android:layout_marginTop="10dp"
    app:circularflow_defaultRadius="15dp"
    android:background="@drawable/shape_timkiem"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:src="@drawable/img_11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/item_hinh_anh_user"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Mã SP :"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ten_sp_giohang"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Giá tiền :"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/giatien_sp_giohang"
            />

    </LinearLayout>



        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnApart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:background="#D6D6D6"
            android:padding="10dp"
            android:src="@drawable/img_17" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="1"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D6D6D6"
            android:padding="10dp"
            android:src="@drawable/add"
            android:layout_marginHorizontal="5dp"
             />
    </LinearLayout>
</LinearLayout>
