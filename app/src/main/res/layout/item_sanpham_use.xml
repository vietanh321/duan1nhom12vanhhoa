<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_timkiem"
    android:layout_marginTop="8dp"
    app:circularflow_radiusInDP="30dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:src="@drawable/img_11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/item_hinh_anh_user"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content"
               >
               <TextView
                   android:text=" Giày :"
                   android:layout_width="40dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/user_ten_sp"
                   />
           </LinearLayout>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/user_idhinhanh_hinhanh"-->
<!--                android:layout_gravity="center"-->
<!--                />-->
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:id="@+id/user_url_hinhanh1"-->
<!--                android:layout_gravity="center"-->
<!--                />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text=" Giá :"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_giatien_sp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/add_to_cart"
                    android:layout_width="50dp"
                    android:layout_height="30dp"

                    android:layout_marginRight="150dp"
                    />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>